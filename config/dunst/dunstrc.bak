[global]
monitor = 0
follow = mouse
geometry = "250x50-10+38"
indicate_hidden = yes
shrink = no
separator_height = 4
separator_color = auto
padding = 10
horizontal_padding = 20
frame_width = 0
sort = no
idle_threshold = 120
font = Terminus 12
line_height = 4
markup = full
format = %s\n%b
alignment = left
#show_age_threshold = 60
word_wrap = yes
ignore_newline = no
stack_duplicates = false
hide_duplicate_count = yes
show_indicators = no
icon_position = left
max_icon_size = 48
sticky_history = yes
history_length = 20
browser = x-www-browser -new-tab
always_run_script = true
title = Dunst
class = Dunst

[shortcuts]
close = ctrl+shift+space
close_all = ctrl+shift+space
history = ctrl+grave
context = ctrl+shift+period

[urgency_low]
timeout = 2
background = "#c4c7c5"
foreground = "#121213"
frame_color = "#000000"

[urgency_normal]
timeout = 5
background = "#c4c7c5"
foreground = "#121213"
frame_color = "#000000"

[urgency_critical]
timeout = 0
background = "#121213"
foreground = "#EC407A"
frame_color = "#1b1b1b"
